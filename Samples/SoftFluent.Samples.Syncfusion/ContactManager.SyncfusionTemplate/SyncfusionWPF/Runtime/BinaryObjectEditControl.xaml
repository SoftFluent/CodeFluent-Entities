<UserControl x:Class="$projectname$.Runtime.BinaryObjectEditControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="TextBoxFileName" Style="{DynamicResource EditTextStyle}" Text="{Binding Path=FileName}" IsEnabled="False"/>
        <Button Grid.Column="1" Content="Browse..." Click="BrowseButton_Clicked"/>
    </Grid>
</UserControl>